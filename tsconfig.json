{
  "include": ["src/**/*", "index.d.ts"],
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "strict": true
  }
}
